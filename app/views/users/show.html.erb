<div class="comtainer">
  <div class="row">
    <div class="col-md-10">
      
      <div class="perpage">

        <div class="col-md-4 col-sm-4 col-md-offset-3 ">
          <div class="text-center photoright">
          <img src="https://api.fnkr.net/testimg/350x350/00CED1/FFF/?text=img+placeholder" class="img-responsive img-rounded">
          
          </div>
        </div>

        <div class="col-md-5 col-sm-8">
          <h2><%= @user.name %></h2>
          <p><strong><%= @user.email %></strong></p>
          <div><%= simple_format @user.intro %></div>
          <% if @user.email == current_user.email %>
            <%= link_to 'Edit Profile', edit_user_path(@user), class: "btn btn-warning" %>
            <% end %>
          </div>

        <div class="clearfix"></div>


      </div>

    </div>
  </div>
</div>

<style>
  .photoright{
    text-align: center;
    margin: auto;
  }
</style>