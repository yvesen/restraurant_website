<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1><%= @restaurant.name %></h1>
      <p class="label label-primary"><%= @restaurant.category.name %></p>
    </div>

    <div class="col-md-4">
      <div class="topsen">
        <%= image_tag @restaurant.image, class: "img-responsive center-block" %>
        <img src="https://api.fnkr.net/testimg/350x200/00CED1/FFF/?text=img+placeholder">
      </div>
      <br>
      <div class="well">
        <ul class="list-unstyled">
          <li><strong>Opening Hour:</strong> <%= @restaurant.opening_hours %></li>
          <li><strong>Tel:</strong> <%= @restaurant.tel %></li>
          <li><strong>Address:</strong> <%= @restaurant.address %></li>
        </ul>
      </div>
    </div>
    <div class="col-md-8">
      <%= simple_format @restaurant.description %>
      <h5><%= link_to 'Back to index', restaurants_path %>
    </div>
    
  </h5>

    <div class="clearfix"></div>

    <hr>

  <% @restaurant.comments.each do |comment| %>
    <div>
      <h4><%= comment.user.email.split('@').first %></h4>
      <p><%= simple_format comment.content %></p>
      <p class="text-muted">
        <em><%= time_ago_in_words(comment.created_at) %> </em>
        <% if current_user.admin? %>
          <%= link_to "Delete", restaurant_comment_path(@restaurant, comment), method: :delete %>
        <% end %>
      </p>
    </div>
    <hr>
    <% end %>

  </div>
  
  <div class="row">
    <%= form_for [@restaurant, @comment] do |f| %>
    <div class="form-group">
      <%= f.text_area :content, placeholder: "留個言吧", class: "form-control" %>
    </div>
    <div class="form-group text-center">
      <%= f.submit class: "btn btn-primary" %>
      <%= f.button "Cancel", type: :reset, class: "btn btn-default" %>
    </div>
    
    

    <% end %>

  </div>

</div>

<style>
  .topsen{
    margin-top: 10px;
  }

</style>