<div class="container">
	
	<div class="text-center">
		<h4><%= link_to '+New Restaurant', new_admin_restaurant_path %></h4>
	</div>


	<table class="table table-hover">
		<thead>
			<tr>
				<th>No</th>
				<th>Category</th>
				<th>Name</th>
				<th>Address</th>
				<th>Opening Hours</th>
				<th></th>
				<th></th>
				<th></th>
			</tr>
		</thead>		
	  <% @restaurants.each do |restaurant| %>
	  <tr>
	  	<th scope="row"><%= restaurant.id %></th>
	    <td>[<%= restaurant.category.name %>]</td>
	    <td><%= restaurant.name %></td>
	    <td><%= restaurant.address %></td>
	    <td><%= restaurant.opening_hours %></td>

	    <td><%= link_to 'Show', admin_restaurant_path(restaurant) %></td>
	    <td><%= link_to 'Edit', edit_admin_restaurant_path(restaurant) %></td>
	    <td><%= link_to 'Delete', admin_restaurant_path(restaurant), method: :delete, data: {confirm:"Are you sure?"} %></td>
	  </tr>
	  <% end %>
	  
	</table>
		<div class="text-center">
			<%= paginate @restaurants %>
		</div>

</div>

